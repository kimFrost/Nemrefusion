						div.grid.grid--8
							| image


			section.partial.container.partial--superlightgray.partial--footer
				div.container__content
					div.container__inner
						div.grid
							a
								img(src="/img/graphic/logo.png", alt="Nem Refusion")
						div.grid.grid--6.grid--spaceright
							ul.list
								li.list__headline Support og Kontakt
							p Mandag-fredag kl. 08.00 - 16.30
							a.btn KLIK HER
						div.grid.grid--6.grid--spaceleft.grid--spaceright
							ul.list
								li.list__headline Om Nemrefusion
								li.list__item
									a Hvad er NemRefusion
								li.list__item
									a Hvordan indveretter jeg?
								li.list__item
									a Prøv demoløsning
						div.grid.grid--6.grid--spaceleft.grid--spaceright
							ul.list
								li.list__headline headline
								li.list__item 1
								li.list__item 2
								li.list__item 3
								li.list__item 4
						div.grid.grid--6.grid--spaceleft
							ul.list
								li.list__headline headline
								li.list__item 1
								li.list__item 2
								li.list__item 3
								li.list__item 4


						//div.prototype(style="height: 300px; width: 100%;")
							div.prototype__name Footer




		script(src='/scripts/nemrefusion.js')